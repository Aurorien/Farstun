{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./api/*",
    "noEmit": true,
    "allowJs": true,
  },
  "include": ["./api/**/*"],
  "exclude": ["node_modules"]
}

